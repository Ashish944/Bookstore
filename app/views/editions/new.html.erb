<h1> Create Edition</h1>
  <br>
  <br>
<div>
  <%= form_for @edition_data, url:{ action: "create" } do |edition_form| %>
  <table>
   <tbody>    
      <tr>
       <td> <%= label_tag(:version, " Version : ") %></td>
       <td>  <%= edition_form.text_field(:version) %> </td>
      </tr>
   
      <tr>
        <td>  <%= label_tag(:published_date, " Published Date : ") %></td>
        <td>   <%= edition_form.text_field(:published_date) %> </td>
       </tr>

       <tr>
        <td> <%= label_tag(:cover_type, " Cover Type: ") %></td>
        <td> <%= edition_form.text_field(:cover_type) %> </td>
       </tr>
      
       <tr>
        <td>  <%= label_tag(:no_of_pages, " No of Pages : ") %></td>
        <td>  <%= edition_form.text_field(:no_of_pages) %></td>
       </tr>
       
       <tr>
          <td>  <%= label_tag(:price, " Price : ") %></td>
          <td>  <%= edition_form.text_field(:price) %></td>
       </tr>

       <tr>
          <td>  <%= label_tag(:count, " Count : ") %></td>
          <td>  <%= edition_form.text_field(:count) %></td>
       </tr>

       <tr>
          <td>  <%= label_tag(:publication_id, " Publication : ") %></td>
          <td>  
                <%= edition_form.collection_select :publication_id, Publication.all, :id, :name %>                   
          </td>
       </tr>

       <tr>
         <td></td>
         <td><%= submit_tag("Create") %></td> 
       </tr>
        <% end %>
      </tbody>
  </table>

</div>